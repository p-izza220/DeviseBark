<div id="newSessionForm">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="session_field">
      <%= f.email_field :email, class: "loginField", autofocus: true, placeholder: "Email" %>
    </div>

    <div class="session_field">
      <%= f.password_field :password, class: "loginField", autocomplete: "off", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, id: "rememberMe" %>
      </div>
    <% end -%>

    <br>

    <div class="actions">
      <%= f.submit "Sign in", class: "btnStyle" %>
    </div>
  <% end %>

  <br>

  <%= render "owners/shared/links" %>
</div>
